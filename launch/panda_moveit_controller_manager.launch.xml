 <launch>
  <arg name="use_franka_gazebo" default="false"/>
  <!-- Set the param that trajectory_execution_manager needs to find the controller plugin -->
  <arg name="moveit_controller_manager" default="moveit_simple_controller_manager/MoveItSimpleControllerManager" />
  <param name="moveit_controller_manager" value="$(arg moveit_controller_manager)"/>
  <!-- load controller_list -->
  <rosparam file="$(find panda_moveit_config)/config/panda_controllers.yaml" unless="$(arg use_franka_gazebo)"/>
  <rosparam file="$(find panda_moveit_config)/config/panda_controllers_sim.yaml" if="$(arg use_franka_gazebo)"/>
 </launch>
